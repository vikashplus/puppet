PUPPET_PATH = /home/franka/dev/puppet
MJ_PATH = /home/franka/.mujoco/mujoco200

UTILS=../vive/source/utils.cpp
MUJOCO = -I$(MJ_PATH)/include -L$(MJ_PATH)/bin
LDFLAGS = -lmujoco200 -lGL -lglew -lpthread
LIBGLFW = $(MJ_PATH)/bin/libglfw.so.3
LIBREDIS = /usr/local/lib/libredis++.a -lhiredis
GLOVE_PATH = $(PUPPET_PATH)/cyberglove
CGLOVE = -I$(GLOVE_PATH)/source $(GLOVE_PATH)/source/CyberGlove_utils.cpp
MJVIVE = -I../vive/sdk/openVR -I../vive/sdk -DGLEW_STATIC ../vive/sdk/GL/glew.c
LIBVR = ../vive/sdk/openVR/libopenvr_api.so

CC = g++
CFLAGS = -Wall -std=c++11
C17FLAGS = -Wno-format-truncation -Wall -std=c++17 # Ensure using the same c++ standard as building redis++
all:
	@echo Building ==============================
	$(CC) $(CFLAGS) $(MUJOCO) ../vive/source/playlog.cpp $(UTILS) $(LDFLAGS) $(LIBGLFW) -o ../build/playlog
	$(CC) $(C17FLAGS) $(MUJOCO) $(MJVIVE) ../vive/source/viveGlove.cpp $(UTILS) $(LDFLAGS) $(LIBGLFW) $(LIBVR) $(LIBREDIS) -o ../build/puppet

clean:
	@echo Cleaning ==============================
	rm ../build/playlog*
	rm ../build/puppet*
